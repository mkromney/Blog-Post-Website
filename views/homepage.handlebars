<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
<!--  <a href="/post/{{post.id}}">{{post.name}}</a>
      <p href="/post/{{post.id}}">{{post.description}}</p>  -->

      <a>{{post.name}}</a>
      <p>{{post.description}}</p>
    </h2>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}